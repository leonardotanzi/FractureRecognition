<CustLabel@Label>:
    color: 0, 0, 0, 1
 
 
<SampBoxLayout>:
    orientation: "vertical"
    padding: 10
    spacing: 10
 
    # ---------- Holds CheckBox and RadioBox ----------
    BoxLayout:
        orientation: "horizontal"
        height: 50
 
        
        BoxLayout:
            padding: 10
            spacing: 10
            size_hint: None, None
            pos_hint: {"center_x": .5, "center_y": .5}
            height: 44
            Image:
                size_hint: None, None
                size: 400, 400 
                source: app.get_running_app().source
            Label:
                height: 24
                text_size: self.width, None
                color: (1, 1, 1, .8)
                text: 'Kivy Pictures'

        
 
    # ---------- Holds Slider & Switch ----------
    BoxLayout:
        orientation: "horizontal"
        height: 30
 
        BoxLayout:
            orientation: "horizontal"
            size_hint_x: .25

            CustLabel:
                text: "Canny Window"
            CustLabel:
                text: str(slider_id.value)

            # Define the min, max, starting value and how
            # much the value changes with each move
            Slider:
                id: slider_id
                min: 0
                max: 100
                value: 0
                step: 1
 
    BoxLayout:
        TextInput:
            id: entry
            font_size: 15
            multiline: False

    BoxLayout:
        Button:
            text: "Compute"
            size_hint_x: None
            width: 200
     
    # ---------- Displays TabbedPanel ----------
    BoxLayout:
        orientation: "horizontal"
        height: 30

 
        BoxLayout:
            orientation: "horizontal"
            size_hint_x: .25
 
            TabbedPanel:
                do_default_tab: False
 
                TabbedPanelItem:
                    text: "Canny Computation"
                    Image:
                        size_hint: None, None
                        source: app.get_running_app().outCanny
                TabbedPanelItem:
                    text: "Result"
                    Label:
                        text: "Lines"
                    Image:
                        size_hint: None, None
                        source: app.get_running_app().outLines
                
                TabbedPanelItem:
                    text: "Graph"
                    Label:
                        text: "Content of Third Panel"
                    Image:
                        size_hint: None, None
                        source: app.get_running_app().outGraph
                

